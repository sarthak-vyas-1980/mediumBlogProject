    "postinstall": "npm run prisma:generate"
  },
  "dependencies": {
    "@prisma/client": "^6.15.0",
    "@prisma/extension-accelerate": "^2.0.2",
    "@sarthaktech/medium-common": "^1.0.0",
    "bcryptjs": "^3.0.2",
    "hono": "^4.9.6",
    "prisma": "^6.15.0"
  },
  "devDependencies": {
    "@types/node": "^24.3.1",
    "wrangler": "^4.34.0"
  }
}
